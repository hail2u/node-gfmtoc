#!/usr/bin/env node

'use strict';

var fs = require('fs');
var os = require('os');

var gfmtoc = require('../index');

var file = 'README.md';

if (process.argv.length > 2) {
  file = process.argv[2];
}

var markdown = fs.readFileSync(file, 'utf8');
var eol = gfmtoc.getEol(markdown);
var toc = gfmtoc.buildToc(markdown);
fs.writeFileSync(file, markdown.split(eol).map(function (l) {
  if (l === '<!-- #toc -->') {
    this.skip = true;

    return l + eol + eol + toc;
  }

  if (l === '<!-- /toc -->') {
    l = eol + l;
    this.skip = false;
  }

  if (this.skip) {
    return undefined;
  }

  return l;
}, {
  skip: false
}).filter(function (l) {
  return l !== undefined;
}).join(eol));
